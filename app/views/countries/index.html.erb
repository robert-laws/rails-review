<% provide(:title, "The Countries Section") %>

<%= render partial: 'shared/menu', layout: 'shared/main_menu' %>

<h1>All Countries</h1>

<ul>
  <% @countries.each do |country| %>
    <li><%= link_to country.name, country_path(country) %></li>
    <%= render partial: 'membership_info', locals: { country: country }%>
    <%= render partial: 'cities/city', collection: country.cities %>
  <% end %>
</ul>

<hr>

<%= link_to 'Add a new country', new_country_path %>

<%= render 'shared/footer' %>