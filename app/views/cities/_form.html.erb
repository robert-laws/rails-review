<% if @city.errors.any? %>
  <div id="error_explaination">
    <h2>
      <%= pluralize(@city.errors.count, "error") %>
      prevented this city from being saved:
    </h2>
    <ul>
      <% @city.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@city) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :population %>
  <%= f.number_field :population %><br>

  <%= f.label :country_id %>
  <%= f.collection_select(:country_id, Country.all, :id, :name) %><br>

  <%= f.submit %>
<% end %>