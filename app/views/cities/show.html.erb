<h1>City Information</h1>

<% flash.each do |name, message| %>
  <%= content_tag :div, message %>
<% end %>

<h4>
  City Name: <%= @city.name %>
</h4>

<%= render partial: 'countries/basic_info', locals: { country: @city.country } %>

<p>
  Population: <%= @city.population %>
</p>

<p>
  Capital City: <%= @city.capital_city %>
</p>

<%= link_to 'Edit City', edit_city_path(@city) %><br>

<%= link_to 'Delete City', @city, method: :delete, data: { confirm: "Are you sure?" } %>